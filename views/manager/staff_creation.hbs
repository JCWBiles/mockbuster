<!DOCTYPE html>
<html lang="en">

<head>
  <metacharset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
  <script src="https://kit.fontawesome.com/b21f20a653.js"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/hover.css/2.3.1/css/hover-min.css" type="text/css" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/baguettebox.js/1.8.1/baguetteBox.min.css">
  <link rel="stylesheet" href="../stylesheets/styles.css" type="text/css" />

  <title>MockBuster - Staff Creation</title>
</head>

<body>

  <!-- Header -->
  <header>
    <div class="container-fluid header-container">
      <div class="row no-gutters">
        <a class="col-md-2 logo" href="/manager/hub"></a>

        <nav class="col-md-10 navbar navbar-expand-sm navbar-light bg-white">
          <a class="navbar-brand" href="/manager/staff_creation">Staff Creation</a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span><!-- This compenent is what provides the three bar icon for the button --></button>
            <div class="collapse navbar-collapse" id="navbarNavDropdown">
              <!-- The id name must match the data-target seen in row 27 -->
              <ul class="navbar-nav">
                <li class="nav-item dropdown">
                  <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    {{#managers}}
                    {{this.man_firstname}}'s Account
                    {{/managers}}
                  </a>
                  <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                    <a class="dropdown-item" href="/manager/account">My Details<i class="fas fa-info-circle float-right"></i></a>
                    <a class="dropdown-item" href="/blog?role=manager">Blog<i class="fas fa-blog float-right"></i></a>
                    <a class="dropdown-item" href="/manager/hr">HR<i class="fas fa-person-booth float-right"></i></a>
                    <a class="dropdown-item" href="#">Film Library<i class="fas fa-photo-video float-right"></i></a>
                    <a class="dropdown-item" href="/manager/staff_creation">Staff Creation<i class="fab fa-creative-commons-remix float-right"></i></a>
                    <a class="dropdown-item" href="#">Customer Suggestions<i style="padding-left: 15px;" class="fas fa-comment-dots"></i></a>
                    <a class="dropdown-item" href="/manager/messages">Messages<i class="fas fa-inbox float-right"></i></a>
                    <a class="dropdown-item" href="/manager/hub">Hub<i class="fas fa-backspace float-right"></i></a>
                    <a class="dropdown-item" href="/manager/session/destroy">Log Out<i class="fas fa-sign-out-alt float-right"></i></a>
                  </div>
                </li>
              </ul>
            </div>
          </nav>
        </div>
      </div>
    </header>
    <!-- /.Header -->

    <!-- Callout -->
    <div class="container-fluid background-jumbotron callout-container">
      <div class="opaque-overlay">&nbsp;</div>
      <div class="row">
        <div class="col-8 form-background">
          <form action="/manager/staff_creation" method="post" enctype="multipart/form-data">
            <h5 style="padding-top: 20px;">Employee Details</h5>
            <div class="form-group">
              <label for="exampleFirstName">Employee First Name</label>
              <input name="em_first_name" type="text" placeholder="enter first name here" class="form-control" id="FirstName" required>
            </div>
            <div class="form-group">
              <label for="exampleLastName">Employee Last Name</label>
              <input name="em_last_name" type="text" placeholder="enter last name here" class="form-control" id="LastName" required>
            </div>
            <div class="form-group">
              <label for="exampleInputEmployeeNumber">Employee Email</label>
              <input name="em_email" type="text" placeholder="e.g. example@web.com" class="form-control" id="exampleInputEmployeeEmail" pattern="[a-z0-9A-Z._%+-]+@[a-z0-9A-Z.-]+\.[a-zA-Z]{2,}$" required>
            </div>
            <div class="form-group">
              <label for="exampleInputEmployeeAddress">Employee Address</label>
              <input name="em_address_line1" type="text" class="form-control textbox" id="exampleInputEmployeeAddress" value="{{this.em_address_line1}}">
              <input name="em_address_line2" type="text" class="form-control textbox" id="exampleInputEmployeeAddress" value="{{this.em_address_line2}}">
              <input name="em_address_city" type="text" class="form-control textbox" id="exampleInputEmployeeAddress" value="{{this.em_address_city}}">
              <input name="em_address_postcode" type="text" class="form-control textbox" id="exampleInputEmployeeAddress" value="{{this.em_address_postcode}}">
            </div>
            <div class="form-group">
              <label for="exampleInputEmployeeTel">Employee Telephone</label>
              <input name="em_tel" type="text" class="form-control textbox" id="exampleInputEmployeeTel" value="{{this.em_tel}}">
            </div>
            <div class="form-group">
              <label for="exampleInputEmployeeNumber">Employee Number</label>
              <input name="employee_number" type="text" placeholder="enter their 6 digit number here" class="form-control" id="exampleInputEmployeeNumber" required>
            </div>
            <div class="form-group">
              <label for="exampleInputStaffID">Staff ID</label>
              <input name="staff_id" type="text" placeholder="staff ID begins with 'MB'" class="form-control" id="exampleInputStaffID" required>
            </div>
            <div class="form-group">
              <label for="exampleInputPassword1">Employee Starter Password</label>
              <input name="password" type="password" placeholder="*********" class="form-control" id="exampleInputPassword1" required>
            </div>
            <div class="form-group">
              <label for="profilePic">Profile Pic</label>
              <input name="imageUrl" type="file" class="form-control" enctype="multipart/form-data">
            </div>

      <div class="form-group form-check">
        <input type="checkbox" class="form-check-input" id="exampleCheck1" required>
        <label class="form-check-label" for="exampleCheck1">Tick to confirm details are correct</label>
      </div>
      <button type="submit" class="btn btn-primary">Submit</button>
    </form>
    <br>
  </div>
</div>
</div>
<!-- /.Callout -->

<!-- Footer -->
