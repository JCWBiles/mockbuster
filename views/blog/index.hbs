  <!-- Callout -->
  <div class="each-event">
    <h1 style="padding-left:20px;">Welcome to Blogbuster!</h1>
    <br>


    <div class="container-fluid background-jumbotron callout-container">
      <div class="opaque-overlay">&nbsp;</div>
      <div class="row">
        <div class="col-12 form-background">
          <form id="new-blog-form" action="/blog" method="post">
            <h6 style="padding-top: 20px;">Have you seen an epic movie that you would like to talk about?
              Is there a sequal you can't wait for? Do you know of a great venue to watch movies?
              If so, please discuss with fellow movie lovers here!</h6>
              <h5 style="padding-top: 5px;">Leave a blog!</h5>
              <div class="form-group">
                <label for="movie">Blog Title</label>
                <input name="movie" type="text" class="form-control" id="movie" placeholder="e.g. movie title" >
              </div>
              <div class="form-group">
                <label for="review">What are you blogging about? </label>
                <input id="review" type="text" name="review" class="form-control" placeholder="e.g. your movie review">
              </div>

              <div class="form-group">
                <label for="user">Blogbuster user</label>
                {{#users}}
                <input id="user" type="text" name="user" class="form-control" value="{{this.firstname}}" >
                {{/users}}
              </div>
              <button type="submit" class="btn btn-primary">Submit</button>
            </form>
            <br>
          </div>
        </div>
      </div>

      <!-- Output of reviews -->
      <h1 style="padding-left:20px; background:linear-gradient(to right, red, goldenrod, blue); margin:0px;">Mockbuster community is talking about...</h1>
      {{#each blog}}
      <div class="container-fluid background-jumbotron callout-container">
        <div class="opaque-overlay">&nbsp;</div>
        <div class="container">
          <div class="row">
            <div class="col align-self-center">
              <br>
              <hr>

              <div class="event-description" style="margin:20px; background-color:rgb(224, 245, 251); border-radius: 25px; border: 4px solid goldenrod; padding: 20px;">
                <table class="table table-borderless">
                  <tbody>
                    <tr>
                      <th scope="row">Title:</th>
                      <td width="80%">{{this.movie}}</td>
                    </tr>
                    <tr>
                      <th scope="row">Details:</th>
                      <td>{{this.review}}</td>
                    </tr>
                    <tr>
                      <th scope="row">Name:</th>
                      <td>{{this.user.firstname}}</td>
                    </tr>
                    <tr>
                      <th scope="row">Like the blog?</th>
                      <td>
                        <div class="buttons">
                          <span class="like-btn"></span>
                        </div>
                      </td>
                    </tr>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
